<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="#1effffff"
        android:background="@drawable/rounded_block"
        android:orientation="horizontal"
        android:padding="3dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/grayish_black"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/doc" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Group Name"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sizetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="42 MB â€¢ MKV"
                android:textColor="#66FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_bg_100"
            android:backgroundTint="@color/light_gray"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/playbtn"
                android:layout_width="62dp"
                android:layout_height="42dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/round_bg_100"
                android:scaleType="fitCenter"
                android:padding="6dp"
                android:backgroundTint="#00ffffff"
                android:src="@drawable/group_42"
                tools:ignore="UseAppTint" />

            <ImageButton
                android:id="@+id/downloadbtn"
                android:layout_width="62dp"
                android:layout_height="42dp"
                android:padding="6dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/round_bg_100"
                android:backgroundTint="#00ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/group_43"
                tools:ignore="UseAppTint" />
        </LinearLayout>


    </LinearLayout>


</FrameLayout>