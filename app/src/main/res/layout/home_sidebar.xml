<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/chat_tab"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="62dp"
        android:nextFocusRight="@id/chatsGridView"
        android:background="@drawable/round_bg_22"
        android:backgroundTint="#00000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ph_chatsteardropfill"
            app:tint="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:textColor="@color/primary"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlnd_tab"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="62dp"
        android:nextFocusRight="@id/chatsGridView"
        android:layout_marginVertical="18dp"
        android:background="@drawable/round_bg_22"
        android:backgroundTint="#00000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/solar_downloadbold"
            app:tint="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downloads"
            android:textColor="@color/primary"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/history_tab"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="62dp"
        android:nextFocusRight="@id/chatsGridView"
        android:background="@drawable/round_bg_22"
        android:backgroundTint="#00000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/mingcute_historyfill"
            app:tint="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="@color/primary"
            android:textSize="10sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/delete_tab"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="62dp"
        android:nextFocusRight="@id/chatsGridView"
        android:background="@drawable/round_bg_22"
        android:backgroundTint="#00000000"
        android:layout_marginVertical="18dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/outline_delete_24"
            app:tint="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/primary"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>